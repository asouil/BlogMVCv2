
{% extends "layout/default_beer.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <section class="row">
        <div class="col-12 col-sm-6">
            <h1 class="text-center">Julien@apprendre.co</h1>
            <img src='https://st4.depositphotos.com/1036149/19788/v/600/depositphotos_197887678-stock-video-fun-unicorn-beer-animation.jpg' alt="julien">

<h1 class="text-center mt-5">Bread Beer Shop - Contact</h1>  
<section id="profile_section" class="row no-gutters justify-content-center align-items-center mb-5">
        <form id='contactForm' method="post" action="" class="container"> 
            <div class="row"> 
                <div class="form-group col-12 col-sm">  
                    <label for="from">Adresse mail</label>  
                    <input required class="form-control" type="text" name="from" id="from" placeholder="Votre adresse mail" />  
                </div>  
                <div class="form-group col-12 col-sm">  
                    <label for="object">Objet</label>  
                    <input required class="form-control" type="text" name="object" id="object" placeholder="Objet du mail" />  
                </div>
            </div>  
            <div class="form-group">  
                <p><label for="message">Message</label></p>
                <textarea required class="form-control" name="message" id="message" rows="10" cols="80"></textarea>  
            </div>  
            <div>   
                <input class="btn btn-primary" type="submit" name="send" value="Envoyer" disabled/>  
            </div>  
        </form>  

</section>
{% endblock %}